{
    "manifest_version": 3,
    "name": "Formatted copy",
    "version": "1.0",
    "description": "Copy from the glowfic website, with formatting",
    "icons": {
        "48": "icons/48.png",
        "96": "icons/96.png"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite",
        "scripting"
    ],
    "commands": {
        "formatted-copy": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "Command+Shift+F"
            },
            "description": "Copy the selected text, with Discord formatting"
        }
    },
    "background": {
        "scripts": [
            "background-script.js"
        ],
        "type": "module"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "formatted@taglialegne.it"
        }
    }
}