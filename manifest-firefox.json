{
    "manifest_version": 3,
    "name": "Copy as a Markdown quote",
    "version": "1.1.2",
    "description": "Copy the selected text as a Markdown quote",
    "icons": {
        "48": "icons/48.png",
        "96": "icons/96.png"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite",
        "scripting"
    ],
    "commands": {
        "copy-as-markdown": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "Command+Shift+F"
            },
            "description": "Copy the selected text as a Markdown quote"
        }
    },
    "background": {
        "scripts": [
            "background-script.js"
        ]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "formatted@taglialegne.it"
        }
    }
}